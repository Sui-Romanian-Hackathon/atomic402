{
  "name": "@atomic402/sui-sdk",
  "version": "0.0.2",
  "description": "TypeScript SDK for x402 (Payment Required) protocol on Sui blockchain with atomic payment + access grant",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "sui",
    "x402",
    "payment",
    "blockchain",
    "web3",
    "ptb",
    "programmable-transaction",
    "atomic-payment",
    "sui-sdk",
    "payment-required"
  ],
  "author": "fac3m4n",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fac3m4n/atomic402.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/fac3m4n/atomic402/issues"
  },
  "homepage": "https://github.com/fac3m4n/atomic402#readme",
  "peerDependencies": {
    "@mysten/sui": "^1.45.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@mysten/sui": "^1.45.0"
  }
}
